@model CategoryEditVM
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Name</label>
            <input class="form-control" id="customFile" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span><br />
        </div>

        <div class="form-group">
            <img src="~/assets/images/category-image/@Model.Image" style="width:80px;height:150px;" />
            <input class="form-control" id="customFile" asp-for="Photo" />
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        
        <div class="form-group">
            <img src="~/assets/images/category-image/category-background/@Model.BackgroundColor" style="width:150px;height:150px;" />
            <input class="form-control" id="customFile" asp-for="Color" />
            <span class="text-danger" asp-validation-for="Color"></span>
        </div>

        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>

