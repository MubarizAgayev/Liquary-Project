@model Category
@{
    ViewData["Title"] = "Detail";
}

<div class="container">

    <div class="form-group">
        <label>Name</label>
        <input class="form-control" disabled id="customFile" asp-for="CategoryName" />
        <span class="text-danger" asp-validation-for="CategoryName"></span><br />
    </div>

    <div class="form-group">
        <label>Image</label>
        <div class="form-group">
            <img style="width:80px;height:150px" src="~/assets/images/category-image/@Model.CategoryImage" />
        </div>
    </div>

    <div class="form-group">
        <label>Color</label>
        <div class="form-group">
            <img style="width:150px;height:150px" src="~/assets/images/category-image/category-background/@Model.BackgroundColor" />
        </div>
    </div>

    <div class="form-group">
        <div class="buttons my-3">
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>
    </div>
</div>


