@model CategoryCreateVM
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<div class="container">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Name</label>
            <input class="form-control" id="customFile" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span><br />
        </div>
        <div class="form-group">
            <label>Image</label>
            <input class="form-control" id="customFile" asp-for="Photo" />
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <div class="form-group">
            <label>Color</label>
            <input class="form-control" id="customFile" asp-for="Color" />
            <span class="text-danger" asp-validation-for="Color"></span>
        </div>
        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>

