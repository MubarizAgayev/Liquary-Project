@model IEnumerable<Slider>
@{
    ViewData["Title"] = "Index";
}

<div class="container">

    <a class="btn btn-success text-white" asp-action="Create" style="float:right">Create</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Tittle</th>
                <th scope="col">Offer</th>
                <th scope="col">Describtion</th>
                <th scope="col">Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var slider in Model)
            {
                <tr>
                    <th>
                        <img style="width:150px;height:100px;" src="~/assets/images/slider-img/@slider.Image" />
                    </th>
                    <th>
                        @Html.Raw(slider.Tittle)
                    </th>
                    <th>
                        @Html.Raw(slider.Offer)
                    </th>
                    <th>
                        @Html.Raw(slider.Describtion)
                    </th>
                    <td>
                        <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@slider.Id">Info</a>
                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@slider.Id">Edit</a>
                        <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@slider.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



