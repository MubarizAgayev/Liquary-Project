@model Slider
@{
    ViewData["Title"] = "Detail";
}

<div class="container">

    <div class="form-group">
        <label>Tittle</label>
        <input class="form-control" disabled id="customFile" asp-for="Tittle" />
        <span class="text-danger" asp-validation-for="Tittle"></span><br />
    </div>

    <div class="form-group">
        <label>Offer</label>
        <input class="form-control" disabled id="customFile" asp-for="Offer" />
        <span class="text-danger" asp-validation-for="Offer"></span><br />
    </div>

    <div class="form-group">
        <label>Describtion</label>
        <input class="form-control" disabled id="customFile" asp-for="Describtion" />
        <span class="text-danger" asp-validation-for="Describtion"></span><br />
    </div>

    <div class="form-group">
        <label>Images</label>
        <div class="form-group">
            <img style="width:200px;height:150px" src="~/assets/images/slider-img/@Model.Image" />
        </div>
    </div>

    <div class="form-group">
        <div class="buttons my-3">
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>
    </div>
</div>

