@model SliderEditVM
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Tittle</label>
            <input class="form-control" id="customFile" asp-for="Tittle" />
            <span class="text-danger" asp-validation-for="Tittle"></span><br />
        </div>

        <div class="form-group">
            <label>Offer</label>
            <input class="form-control" id="customFile" asp-for="Offer" />
            <span class="text-danger" asp-validation-for="Offer"></span><br />
        </div>

        <div class="form-group">
            <label>Describtion</label>
            <input class="form-control" id="customFile" asp-for="Describtion" />
            <span class="text-danger" asp-validation-for="Describtion"></span><br />
        </div>

        <div class="form-group">
            <img src="~/assets/images/slider-img/@Model.Image" style="width:200px;height:150px;" />
            <input class="form-control" id="customFile" asp-for="Photo" />
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>

        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>

