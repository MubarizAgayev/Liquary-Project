@model SliderCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Tittle</label>
            <input class="form-control" id="customFile" asp-for="Tittle" />
            <span class="text-danger" asp-validation-for="Tittle"></span><br />
        </div>
        <div class="form-group">
            <label>Offer</label>
            <textarea class="form-control" id="description-text" rows="5" asp-for="Offer"></textarea>
            <span class="text-danger" asp-validation-for="Describtion"></span><br />
        </div>
        <div class="form-group">
            <label>Describtion</label>
            <textarea class="form-control" id="description-text" rows="5" asp-for="Describtion"></textarea>
            <span class="text-danger" asp-validation-for="Describtion"></span><br />
        </div>
        <div class="form-group">
            <label>Images</label>
            <input class="form-control" id="customFile" asp-for="Photo" />
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>

