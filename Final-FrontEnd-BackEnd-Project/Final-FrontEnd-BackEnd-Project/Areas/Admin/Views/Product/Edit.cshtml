@model ProductEditVM
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Name</label>
            <input class="form-control" id="customFile" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span><br />
        </div>
        <div class="form-group">
            <label>Price</label>
            <input type="number" step=".01" class="form-control" id="customFile" asp-for="Price" />
            <span class="text-danger" asp-validation-for="Price"></span><br />
        </div>
        <div class="form-group">
            <label>Count</label>
            <input class="form-control" id="customFile" asp-for="Count" />
            <span class="text-danger" asp-validation-for="Count"></span><br />
        </div>
        <div class="form-group">
            <label>Count</label>
            <input class="form-control" id="customFile" asp-for="Raiting" />
            <span class="text-danger" asp-validation-for="Raiting"></span><br />
        </div>

        <div>
            <label>Category</label>
            <select class="form-control" id="customFile" asp-for="CategoryId"  asp-items="@ViewBag.categories"></select><br />
        </div>

        <div class="form-group">
            <div style="display:flex;gap:5px;flex-wrap:wrap;">
                @foreach (var item in Model.Images)
                {
                    <div style="width:150px;height:200px;text-align:center;">
                        <img src="~/assets/images/products/@item.Image" style="width:150px;height:150px;" />
                        <i class="fa-solid fa-trash-can delete-product-image" style="cursor:pointer" data-id="@item.Id"></i>
                    </div>
                }
            </div>
            <input class="form-control" id="customFile" asp-for="Photos" />
            <span class="text-danger" asp-validation-for="Photos"></span>
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea class="form-control" id="description-text" rows="5" asp-for="Describtion"></textarea>
            <span class="text-danger" asp-validation-for="Describtion"></span><br />
        </div>
        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>

