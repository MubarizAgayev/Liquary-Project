@model ProductCreateVM
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<div class="container">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Name</label>
            <input class="form-control" id="customFile" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span><br />
        </div>
        <div class="form-group">
            <label>Count</label>
            <input type="number" class="form-control" id="customFile" asp-for="Count" />
            <span class="text-danger" asp-validation-for="Count"></span><br />
        </div>
        <div class="form-group">
            <label>Price</label>
            <input type="number" step=".01" class="form-control" id="customFile" asp-for="Price" />
            <span class="text-danger" asp-validation-for="Price"></span><br />
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea class="form-control" id="description-text" rows="5" asp-for="Describtion"></textarea>
            <span class="text-danger" asp-validation-for="Describtion"></span><br />
        </div>
        <label>Category</label>
        <select class="form-control" id="customFile" asp-for="CategoryId" asp-items="@ViewBag.categories"></select><br />
        <div class="form-group">
            <label>Images</label>
            <input class="form-control" id="customFile" asp-for="Photos" />
            <span class="text-danger" asp-validation-for="Photos"></span>
        </div>
        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>