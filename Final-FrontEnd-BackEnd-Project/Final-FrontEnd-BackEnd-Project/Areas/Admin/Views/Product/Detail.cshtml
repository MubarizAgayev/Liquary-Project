@model Product
@{
    ViewData["Title"] = "Detail";
}

<div class="container">

    <div class="form-group">
        <label>Name</label>
        <input class="form-control" disabled id="customFile" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span><br />
    </div>
    <div class="form-group">
        <label>Price</label>
        <input type="text" class="form-control" disabled id="customFile" asp-for="Price" />
        <span class="text-danger" asp-validation-for="Price"></span><br />
    </div>
    <div class="form-group">
        <label>Count</label>
        <input class="form-control" disabled id="customFile" asp-for="Count" />
        <span class="text-danger" asp-validation-for="Count"></span><br />
    </div>
    <div class="form-group">
        <label>Raiting</label>
        <input class="form-control" disabled id="customFile" asp-for="Raiting" />
        <span class="text-danger" asp-validation-for="Raiting"></span><br />
    </div>
    <div class="form-group">
        <label>Category</label>
        <input class="form-control" disabled id="customFile" asp-for="Category.CategoryName" />
        <span class="text-danger" asp-validation-for="Category.CategoryName"></span><br />
    </div>

    <div class="form-group">
        <label>Images</label>
        <div class="form-group">
            @foreach (var item in Model.Images)
            {
                <img style="width:150px;height:150px" src="~/assets/images/products/@item.Image" />
            }
        </div>
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea class="form-control" disabled id="description-text" rows="5" asp-for="Describtion"></textarea>
        <span class="text-danger" asp-validation-for="Describtion"></span><br />
    </div>
    


    <div class="form-group">
        <div class="buttons my-3">
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>
    </div>
</div>


