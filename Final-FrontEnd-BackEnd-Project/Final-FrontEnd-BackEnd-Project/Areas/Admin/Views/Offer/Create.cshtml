@model OfferCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Description</label>
            <textarea class="form-control" id="description-text" rows="5" asp-for="Describtion"></textarea>
            <span class="text-danger" asp-validation-for="Describtion"></span><br />
        </div>
        <div class="form-group">
            <label>Image</label>
            <input class="form-control" id="customFile" asp-for="Photo" />
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("description-text");
    </script>
}

