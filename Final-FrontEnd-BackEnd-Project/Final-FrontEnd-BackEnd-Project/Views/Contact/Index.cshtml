@model ContactVM
@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/assets/css/contact.css">

<main>
    <div class="head">
        <a asp-controller="Home" asp-action="Index">
            <div class="navigate">
                <i class="fa-solid fa-house-chimney"></i>
                Home
            </div>
        </a>
        <i class="fa-solid fa-chevron-right arrow"></i>
        <span>Contact</span>
    </div>
    <section id="mid-down">
        <div class="container">
            <div class="common">
                <div class="map">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3039.428674496234!2d49.85175681535466!3d40.3771908793697!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40307d079efb5163%3A0xc20aa51a5f0b5e01!2sCode%20Academy!5e0!3m2!1sen!2saz!4v1678085398513!5m2!1sen!2saz"
                            width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
                <div class="contact">
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                        <div class="left">
                            <h3>Contact us</h3>
                            <div class="address">
                                <i class="fa-solid fa-house"></i>
                                <div class="text">
                                    <h4>Address</h4>
                                    <p>123 Main Street, Anytown, CA 12345 - USA</p>
                                </div>
                            </div>
                            <div class="line"></div>
                            <div class="phone">
                                <i class="fa-solid fa-phone"></i>
                                <div class="text">
                                    <h4>Phone</h4>
                                    <p>123 Main Street, Anytown, CA 12345 - USA</p>
                                </div>
                            </div>
                            <div class="line"></div>
                            <div class="email">
                                <i class="fa-solid fa-envelope"></i>
                                <div class="text">
                                    <h4>Email</h4>
                                    <p>123 Main Street, Anytown, CA 12345 - USA</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                        <div class="right">
                            <h2>Contact Us</h2>

                            <form asp-controller="Contact" asp-action="Index" method="post">

                                <div class="group">
                                    <input type="text" asp-for="UserName" required>
                                    <span class="highlight"></span>
                                    <span class="bar"></span>
                                    <label>Your Name (required)*</label>
                                    <span asp-validation-for="UserName"></span>
                                </div>

                                <div class="group"> 
                                    <input asp-for="Email" required>
                                    <span class="highlight"></span>
                                    <span class="bar"></span>
                                    <label>Your Email (required)*</label>
                                    <span asp-validation-for="Email"></span>
                                </div>


                                <div class="group">
                                    <input type="number" asp-for="Number" required>
                                    <span class="highlight"></span>
                                    <span class="bar"></span>
                                    <label>Your Number (required)*</label>
                                    <span asp-validation-for="Number"></span>
                                </div>


                                <div class="group">
                                    <textarea asp-for="Context" cols="30" rows="10"></textarea>
                                    <span class="highlight"></span>
                                    <span class="bar"></span>
                                    <label>Post content*</label>
                                    <span class="text-danger" asp-validation-for="Context"></span>
                                </div>

                                <button type="submit" class="send">Send</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
