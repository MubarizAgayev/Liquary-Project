@model ForgotPasswordVM
@{
    ViewData["Title"] = "ForgotPassword";
}
<link rel="stylesheet" href="~/assets/css/register.css">
<main>
    <div class="container">
        <div class="common">
            <h1>Create account</h1>
            <div class="register">
                <form asp-controller="Account" asp-action="ForgotPassword" method="post">
                    <input placeholder="Email" asp-for="Email"><br>
                    <span class="text-danger" asp-validation-for="Email"></span>
                    <button type="submit">Send</button>
                </form>
                <div class="register">
                    <a style="color:white; text-decoration:none;" asp-action="Login">Back to login</a>
                </div>
            </div>
        </div>
    </div>
</main>

