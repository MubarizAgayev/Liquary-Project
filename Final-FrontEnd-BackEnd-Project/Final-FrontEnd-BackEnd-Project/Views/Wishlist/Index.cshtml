@model List<WishListDetailVM>
@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/assets/css/wishlist.css">

<main>
    <div class="head">
        <a asp-controller="Home" asp-action="Index">
            <div class="navigate">
                <i class="fa-solid fa-house-chimney"></i>
                Home
            </div>
        </a>
        <i class="fa-solid fa-chevron-right arrow"></i>
        <span>wishlist</span>
    </div>

    <div class="container">
        <div class="common">
            <div class="down">
                @if(@Model != null){
                @foreach (var item in Model)
                {
                    <div class="col-lg-3 col-md-4">
                        <div class="cart">
                            <a asp-controller="ProductDetail" asp-action="Index" asp-route-id="@item.Id">
                                <div class="img">
                                    <img src="~/assets/images/products/@item.MainImage" alt="">
                                    <img src="~/assets/images/products/@item.SecondImage" alt="">
                                </div>
                            </a>
                            <div class="information">
                                <h6>Aerodynamic Linen Bench</h6>
                                <div class="stars">
                                    @for (int i = 1; i < 5; i++)
                                    {
                                        if (i <= item.Raiting)
                                        {
                                            <i class="fa-solid fa-star active"></i>

                                        }
                                        else
                                        {
                                            <i class="fa-solid fa-star"></i>

                                        }
                                    }
                                </div>
                                <h6 class="price">$@item.Price</h6>
                                @if (@item.InStock)
                                {
                                    <div class="stock-active">
                                        <div class="dot"></div>
                                        In Stock
                                    </div>
                                }
                                else
                                {
                                    <div class="stock-deactive">
                                        <div class="dot"></div>
                                        In Stock
                                    </div>
                                }
                                <button class="remove-from-wishlist" data-id="@item.Id">REMOVE</button>
                            </div>
                        </div>
                    </div>
                }
                }     

               

               

               

               

            </div>
        </div>
    </div>

</main>
