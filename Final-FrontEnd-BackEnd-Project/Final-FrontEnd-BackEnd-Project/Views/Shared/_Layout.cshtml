<body>
    <header>
        <div class="container">
            <div class="up">
                <div class="col-xl-2 col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="logo">
                        <img src="~/assets/images/logo/Capture.PNG" alt="">
                    </div>
                    <i class="fa-solid fa-bars hamburger"></i>
                    <div class="side-bar">
                        <i class="fa-solid fa-xmark side-bar-close"></i>
                        <ul>
                            <a  asp-controller="Home" asp-action="Index">
                            <li>HOME</li>
                            </a>
                            <a asp-controller="Shop" asp-action="Index">
                            <li>SHOP</li>
                            </a>
                            <a asp-controller="About" asp-action="Index">
                            <li>ABOUT US</li>
                            </a>
                            <a href="">
                            <li>CONTACT</li>
                            </a>
                        </ul>
                    </div>
                </div>
                <div class="col-xl-7 col-lg-7 col-md-6 col-sm-12 col-12">
                    <form asp-controller="Shop" asp-action="Index" method="post">
                        <div class="search">
                            <input class="search-input" type="text" name="searchText" placeholder="Search over 10,000 products...">

                            <button type="submit" style="padding-left:0px;padding-top:0px;padding-bottom:0px;width:83px;"><i data-item="" class="fa-solid fa-magnifying-glass icon search-icon"></i></button>

                        </div>
                    </form>
                        
                </div>
                <div class="col-xl-3 col-lg-4 col-md-5 col-sm-7 col-12">
                    <div class="processes">
                        <div class="authorize">
                            @if (User.Identity.IsAuthenticated)
                            {
                                //<a asp-controller="Account" asp-action="Logout" method="post"><b>Sign up</b></a>
                                <form asp-controller="Account" asp-action="Logout" method="post">
                                    <button type="submit" class="nav-link">Logout</button>
                                </form>
                                <span>,@User.Identity.Name</span>
                            }
                            else
                            {
                                <a asp-controller="Account" asp-action="Login"><b>Sign in</b></a>
                                <span>Or</span>
                                <a asp-controller="Account" asp-action="Register"><b>Register</b></a>
                            }
                        </div>
                        <div class="icons">
                            <a asp-controller="Wishlist" asp-action="Index">
                                <div class="wishlist">
                                    <i class="fa-regular fa-heart heart"></i>
                                    <sub>0</sub>
                                </div>
                            </a>
                            <a asp-controller="Cart" asp-action="Index">
                                <div class="cart">
                                    <i class="fa-solid fa-basket-shopping basket"></i>
                                    <sub class="cart-count">
                                            @ViewBag.BasketCount
                                    </sub>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="line">
            <div class="underline"></div>
        </div>
        <div class="container">
            <div class="down">
                <div class="col-xxl-3 col-xl-4 col-lg-4 col-md-5 col-sm-7 col-7">
                    <div class="tab-menu">
                        <i class="fa-solid fa-bars hamburger"></i>
                        <p>SHOP BY DEPARTMENT</p>
                        <i class="fa-solid fa-angle-down arrow"></i>
                    </div>
                    <div class="menu d-none">
                        <img src="./assets/images/tab-image/bg_vertical-1.webp" alt="">
                        <div class="category-list">
                            <a href="">
                                <div class="item">Whiskey</div>
                            </a>
                            <a href="">
                                <div class="item">Spirits</div>
                            </a>
                            <a href="">
